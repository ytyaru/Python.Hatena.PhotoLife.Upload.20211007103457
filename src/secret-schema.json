{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "secret-schema.json",
    "description": "はてなフォトライフに画像をアップロードするツールの設定ファイル用スキーマです。",
    "type": "object",
    "required": [
        "username",
        "api_key"
    ],
    "properties" :{
        "username": {
            "type": "string"
        },
        "api_key": {
            "type": "string"
        },
        "folder": {
            "type": "string"
        },
        "folders": {
            "type": "array"
        },
        "generator": {
            "type": "string"
        },
        "generators": {
            "type": "array"
        },
        "output_format": {
            "type": "string"
        }
    }
}

